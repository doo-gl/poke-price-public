{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "CommonJS",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "jsx": "react",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "src/web-app/app",
    "src/web-app-v2/client",
    "src/web-app-v2/nextjs-app-spike",
    "src/**/*.txt",
    "node_modules"
  ]
}
